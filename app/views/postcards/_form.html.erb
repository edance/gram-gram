<%= form_with model: @postcard, url: postcard_create_path(@photo), local: true do |form| %>
  Caption: <%= form.text_field :caption %>
  <br/>

  <%= form.fields_for :recipient do |recipient| %>
    Address Line 1: <%= recipient.text_field :address_line1 %>
    <br/>

    Address Line 2: <%= recipient.text_field :address_line2 %>
    <br/>

    City: <%= recipient.text_field :city %>
    <br/>

    State: <%= recipient.text_field :state %>
    <br/>

    Zip: <%= recipient.text_field :zip %>
    <br/>
  <% end %>

  <%= submit_tag('Save') %>
<% end %>
