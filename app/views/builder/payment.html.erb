<% content_for :title, 'Send the Postcard' %>

<%= render 'shared/navbar' %>

<div class="fluid-container vh-100">
  <%= form_with method: :patch, url: update_payment_path(@order), class: 'p-4 p-md-5 payment-form' do |form| %>

    <%= render 'mobile-nav' %>

    <div class="container skinny-container py-5">
      <p class="mt-5 mb-4">
        Almost done!
      </p>

      <table class="table table-sm table-borderless w-100 mb-5">
        <tbody>
          <tr>
            <td>
              <div class="d-flex align-items-start mb-4">
                <%= image_tag(@order.photo.ig_media_url, class: 'img rounded w-60') %>
                <div class="ml-2">
                  <%= postcard_count %> x Postcard
                  <div class="text-muted">
                    $2.95 / postcard
                  </div>
                </div>
              </div>
            </td>
            <td class="text-right"><%= formatted_price %></td>
          </tr>
          <tr class="border-top mb-4">
            <td class="my-4"></td>
            <td class="my-4"></td>
          </tr>
          <tr>
            <td>Tax</td>
            <td class="text-right">$0.00</td>
          </tr>
          <tr>
            <td>
              Total
            </td>
            <td class="text-right">
              <%= formatted_price %>
            </td>
          </tr>
        </tbody>
      </table>

      <%= render 'payment-form' %>

      <%= render 'save-btn' %>
    </div>
  <% end %>
</div>
