<% content_for :title, 'Add a Recipient' %>

<%= render 'shared/navbar' %>

<div class="fluid-container vh-100">
  <%= form_with model: @order, class: 'p-4', url: create_recipient_path(@order), local: true do |form| %>
    <%= render 'mobile-nav' %>

    <div class="container skinny-container py-5">
      <p class="mb-4">
        Where do you want us to send the&nbsp;postcard?
      </p>


      <%= fields_for :recipient, @recipient do |recipient| %>
        <%= render 'recipients/form-fields', form: recipient %>
      <% end %>

      <%= render 'save-btn' %>
    </div>
  <% end %>
</div>
