<section class="ftco-section contact-section ftco-no-pb" id="contact-section">
  <div class="container">
    <div class="row justify-content-center mb-5 pb-3">
      <div class="col-md-7 heading-section text-center fadeInUp">
        <span class="subheading">
          Caption
        </span>
        <h2 class="mb-4">
          Add a Caption
        </h2>
        <p>
          Far far away, behind the word mountains, far from the countries Vokalia and Consonantia
        </p>
      </div>
    </div>

    <div class="row block-9">
      <div class="col-md-7 order-md-last d-flex">
        <%= form_with model: @postcard, class: 'bg-light p-4 p-md-5 contact-form', url: update_caption_path(@postcard), local: true do |form| %>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Your Name">
          </div>
          <div class="form-group">
            <%= form.text_area :caption, class: 'form-control', cols: 30, rows: 7, placeholder: 'Message' %>
          </div>
          <div class="form-group">
            <input type="submit" value="Next" class="btn btn-primary py-3 px-5">
          </div>
        <% end %>
      </div>

      <div class="col-md-5 d-flex">
        <div class="row d-flex contact-info mb-5">
        <%= image_tag(@postcard.photo.ig_media_url, class: 'img rounded') %>
        </div>
      </div>
    </div>
  </div>
</section>
