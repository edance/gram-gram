<% info_msg = flash[:notice] %>
<% error_msg = flash[:alert] %>

<div class="flash-container container fixed-top mt-4">
  <% if info_msg %>
    <div class="alert alert-secondary alert-dismissible fade show" data-auto-hide="true" role="alert">
      <%= info_msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <% if error_msg %>
    <div class="alert alert-secondary alert-dismissible fade show" data-auto-hide="true" role="alert">
      <%= error_msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
</div>
