<% content_for :title, 'Reconnect to Instagram' %>

<div class="fluid-container bg-primary vh-100">
  <!-- Header nav with back button -->
  <nav class="navbar fixed-top navbar-light">
    <a class="navbar-brand" href="/">
      <span class="iconify" data-icon="ion:arrow-back" data-inline="false"></span>
    </a>
  </nav>

  <div class="container skinny-container">
    <div class="py-5 text-center">
      <%= image_tag('instagram-logo.png', width: 122, class: "mt-4") %>

      <h3 class="mt-4">
        Sync your Instagram
      </h3>
      <p>
        Get the latest photos from your Instagram account.
      </p>
    </div>


    <%= link_to 'Reconnect Instagram', authentication_path('instagram'), class: 'mt-5 mb-2 btn btn-block btn-dark' %>
  </div>
</div>
