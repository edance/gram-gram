<div class="fluid-container bg-primary vh-100">
  <!-- Header nav with back button -->
  <nav class="navbar fixed-top navbar-light">
    <a class="navbar-brand" href="/">
      <span class="iconify" data-icon="ion:arrow-back" data-inline="false"></span>
    </a>
  </nav>

  <div class="container skinny-container">
    <div class="py-5 text-center">
      <h3 class="mt-5">
        Change your password
      </h3>
      <p>
        Set your new password here!
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.password_field :password, autofocus: true, autocomplete: "current-password", placeholder: 'Password', class: "text-center form-control" %>

        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.password_field :password,  autocomplete: "new-password", placeholder: 'Confirm Password', class: "text-center form-control" %>
      </div>

      <button type="submit" class="mt-5 mb-2 btn btn-spinner btn-block btn-outline-dark">
        Change Password
        <span class="iconify ml-1 mb-1" data-icon="ion:arrow-forward" data-inline="false"></span>
      </button>

      <%= render "devise/shared/links" %>

      <%= render "devise/shared/error_messages", resource: resource %>
    <% end %>
  </div>
</div>
